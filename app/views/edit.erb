


<h1>Add Images to your Collection <%="#{@username}"%></h1><br><br>




<button id="upload_widget" class="cloudinary-button">Upload files</button><br><br>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

<script type="text/javascript">

    var myWidget = cloudinary.createUploadWidget({
        cloudName: 'argustwo',
        upload_preset: 'b33rch33s3',
        public_id: <%="#{cloud_search(session)["resources"].length + 1}"%>,
        folder: '<%="#{@username}"%>',
        }, (error, result) => { if (result.event == "success") {
            console.log(result.info) // result.info contains data from upload
        } })

        document.getElementById("upload_widget").addEventListener("click", function(){
            myWidget.open();
        }, false);

</script>
<form action="/collections/add" method="post">
<input type="submit" value="Finished">
</form>
